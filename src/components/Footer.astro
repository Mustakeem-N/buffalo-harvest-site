---
// src/components/Footer.astro
import ImpactGraphics from "@/components/ImpactGraphics.astro";
const currentYear = new Date().getFullYear();
---

<footer class="border-t border-emerald-100 bg-emerald-50/60 mt-8">
  <div class="max-w-6xl mx-auto px-4 py-8 grid gap-6 md:grid-cols-3 text-sm text-emerald-900/80">
    <!-- ABOUT -->
    <div>
      <div class="font-semibold text-emerald-900 mb-2">
        Buffalo Harvest Inc.
      </div>
      <p>
        A nonprofit organized exclusively for charitable and educational purposes.
        Improving community health and sustainability through fresh, locally produced food.
      </p>
    </div>

    <!-- CONTACT -->
    <div>
      <div class="font-semibold text-emerald-900 mb-2">
        Contact
      </div>
      <p>Buffalo, NY</p>
      <p>
        Email:
        <a
          href="mailto:info@buffaloharvest.org"
          class="underline hover:text-emerald-700 transition"
          onclick="event.preventDefault(); window.open(this.href, '_blank', 'noopener,noreferrer');"
        >
          info@buffaloharvest.org
        </a>
      </p>
      <p class="mt-1 text-xs text-emerald-800/80">
        Add your phone number and mailing address here when you're ready.
      </p>
    </div>

    <!-- SERVICE AREA -->
    <div>
      <div class="font-semibold text-emerald-900 mb-2">
        Where We Serve
      </div>
      <p class="text-xs mb-2">
        Working with communities across Buffalo and Western New York.
      </p>

      <div class="rounded-2xl border border-emerald-100 bg-white/70 p-4">
        <div class="flex items-start gap-3">
          <div class="shrink-0 w-9">
            <ImpactGraphics variant="ny" class="w-full h-auto" />
          </div>
          <div>
            <p class="text-sm font-semibold text-emerald-900">
              Buffalo & Western New York
            </p>
            <p class="text-xs text-emerald-900/70 leading-relaxed mt-1">
              Supporting neighborhoods across Buffalo, Erie County, and surrounding communities
              through gardens, education, and sustainable growing.
            </p>
          </div>
        </div>

        <div class="mt-3 flex flex-wrap gap-2">
          <span class="text-[11px] px-2.5 py-1 rounded-full bg-emerald-50 border border-emerald-100 text-emerald-800">
            Buffalo
          </span>
          <span class="text-[11px] px-2.5 py-1 rounded-full bg-emerald-50 border border-emerald-100 text-emerald-800">
            Erie County
          </span>
          <span class="text-[11px] px-2.5 py-1 rounded-full bg-emerald-50 border border-emerald-100 text-emerald-800">
            Western NY
          </span>
        </div>
      </div>
    </div>
  </div>

  <!-- LEGAL -->
  <div class="border-t border-emerald-100 py-3">
    <div class="w-full px-4 flex flex-col md:flex-row md:items-center md:justify-between gap-2 text-xs text-emerald-800/80">
      <p class="text-emerald-800/70">
        Buffalo Harvest Inc. is a registered 501(c)(3) nonprofit organization serving Buffalo and Western New York.
      </p>

      <p class="md:text-right md:whitespace-nowrap">
        Â© {currentYear} Buffalo Harvest Inc. All rights reserved.
      </p>
    </div>
  </div>
</footer>
