---
/**
 * ImpactGraphics.astro
 * Purpose: branded, photo-free visuals (SVG) you can reuse across sections.
 *
 * Usage:
 * <ImpactGraphics variant="garden" />
 * <ImpactGraphics variant="youth" />
 * <ImpactGraphics variant="training" />
 * <ImpactGraphics variant="donate" />
 * <ImpactGraphics variant="harvest" />
 * <ImpactGraphics variant="ny" /> // small NY badge
 */

const {
  variant = "garden", // garden | youth | training | donate | harvest | ny
  class: className = "",
  title = "Buffalo Harvest graphic",
} = Astro.props;

const base = "w-full h-auto";
const cls = `${base} ${className}`;
---

{variant === "ny" ? (
  <svg
    class={cls}
    viewBox="0 0 120 120"
    xmlns="http://www.w3.org/2000/svg"
    role="img"
    aria-label={title}
  >
    <circle
      cx="60"
      cy="60"
      r="54"
      fill="rgb(236 253 245)"
      stroke="rgb(167 243 208)"
      stroke-width="6"
    />
    <text
      x="60"
      y="72"
      text-anchor="middle"
      font-size="44"
      font-weight="800"
      fill="rgb(6 95 70)"
      font-family="ui-sans-serif, system-ui, -apple-system"
      letter-spacing="2"
    >
      NY
    </text>
  </svg>
) : (
  <svg
    class={cls}
    viewBox="0 0 900 520"
    xmlns="http://www.w3.org/2000/svg"
    role="img"
    aria-label={title}
  >
    <!-- Background -->
    <defs>
      <linearGradient id="bg" x1="0" y1="0" x2="1" y2="1">
        <stop offset="0%" stop-color="rgb(236 253 245)" />
        <stop offset="100%" stop-color="rgb(240 253 250)" />
      </linearGradient>

      <linearGradient id="accent" x1="0" y1="0" x2="1" y2="0">
        <stop offset="0%" stop-color="rgb(16 185 129)" />
        <stop offset="100%" stop-color="rgb(5 150 105)" />
      </linearGradient>

      <!-- Soft shadow -->
      <filter id="softShadow" x="-20%" y="-20%" width="140%" height="140%">
        <feDropShadow dx="0" dy="10" stdDeviation="12" flood-color="rgba(16,185,129,0.18)" />
      </filter>

      <!-- Dot pattern -->
      <pattern id="dots" x="0" y="0" width="22" height="22" patternUnits="userSpaceOnUse">
        <circle cx="3" cy="3" r="2" fill="rgba(16,185,129,0.18)" />
      </pattern>
    </defs>

    <rect x="0" y="0" width="900" height="520" rx="36" fill="url(#bg)" />
    <rect x="0" y="0" width="900" height="520" rx="36" fill="url(#dots)" opacity="0.45" />

    <!-- Accent ribbon -->
    <path
      d="M0 115C200 55 420 55 900 120V0H0v115Z"
      fill="url(#accent)"
      opacity="0.12"
    />

    <!-- Main card -->
    <g filter="url(#softShadow)">
      <rect x="70" y="92" width="760" height="360" rx="28" fill="white" opacity="0.92" />
      <rect x="70" y="92" width="760" height="360" rx="28" fill="rgba(16,185,129,0.06)" />
    </g>

    <!-- Common headline -->
    <g>
      <rect x="120" y="132" width="260" height="16" rx="8" fill="rgba(5,150,105,0.20)" />
      <rect x="120" y="158" width="380" height="16" rx="8" fill="rgba(5,150,105,0.14)" />
    </g>

    <!-- Variant art -->
    {variant === "garden" && (
      <g>
        <!-- planter -->
        <rect x="140" y="320" width="260" height="78" rx="18" fill="rgba(5,150,105,0.18)" />
        <rect x="140" y="300" width="260" height="34" rx="16" fill="rgba(16,185,129,0.22)" />
        <!-- stems -->
        <path d="M220 300v-70" stroke="rgb(5 150 105)" stroke-width="10" stroke-linecap="round"/>
        <path d="M270 300v-95" stroke="rgb(5 150 105)" stroke-width="10" stroke-linecap="round"/>
        <path d="M320 300v-80" stroke="rgb(5 150 105)" stroke-width="10" stroke-linecap="round"/>
        <!-- leaves -->
        <path d="M214 250c-34-10-54 6-70 28 34 14 62 10 84-4" fill="rgba(16,185,129,0.55)"/>
        <path d="M278 225c-20-26-46-30-82-20 8 34 34 54 62 60" fill="rgba(16,185,129,0.40)"/>
        <path d="M332 245c34-10 54 6 70 28-34 14-62 10-84-4" fill="rgba(16,185,129,0.55)"/>
        <!-- label block -->
        <rect x="470" y="235" width="320" height="18" rx="9" fill="rgba(5,150,105,0.18)" />
        <rect x="470" y="265" width="270" height="14" rx="7" fill="rgba(5,150,105,0.12)" />
        <rect x="470" y="290" width="295" height="14" rx="7" fill="rgba(5,150,105,0.12)" />
        <rect x="470" y="315" width="210" height="14" rx="7" fill="rgba(5,150,105,0.12)" />
      </g>
    )}

    {variant === "youth" && (
      <g>
        <!-- badge circle -->
        <circle cx="270" cy="295" r="118" fill="rgba(16,185,129,0.18)" />
        <circle cx="270" cy="295" r="92" fill="rgba(16,185,129,0.28)" />
        <!-- book -->
        <rect x="210" y="270" width="120" height="90" rx="16" fill="white" stroke="rgba(5,150,105,0.35)" stroke-width="6"/>
        <path d="M270 270v90" stroke="rgba(5,150,105,0.35)" stroke-width="6"/>
        <!-- sprout -->
        <path d="M270 265v-46" stroke="rgb(5 150 105)" stroke-width="10" stroke-linecap="round"/>
        <path d="M265 230c-30-10-48 6-62 24 30 12 54 8 74-4" fill="rgba(16,185,129,0.55)"/>
        <path d="M275 230c30-10 48 6 62 24-30 12-54 8-74-4" fill="rgba(16,185,129,0.55)"/>
        <!-- text bars -->
        <rect x="470" y="225" width="320" height="18" rx="9" fill="rgba(5,150,105,0.18)" />
        <rect x="470" y="255" width="300" height="14" rx="7" fill="rgba(5,150,105,0.12)" />
        <rect x="470" y="280" width="280" height="14" rx="7" fill="rgba(5,150,105,0.12)" />
        <rect x="470" y="305" width="250" height="14" rx="7" fill="rgba(5,150,105,0.12)" />
        <rect x="470" y="330" width="220" height="14" rx="7" fill="rgba(5,150,105,0.12)" />
      </g>
    )}

    {variant === "training" && (
      <g>
        <!-- clipboard -->
        <rect x="170" y="195" width="210" height="240" rx="24" fill="white" stroke="rgba(5,150,105,0.30)" stroke-width="6"/>
        <rect x="215" y="170" width="120" height="54" rx="18" fill="rgba(16,185,129,0.22)" />
        <rect x="205" y="255" width="140" height="16" rx="8" fill="rgba(5,150,105,0.14)" />
        <rect x="205" y="285" width="160" height="14" rx="7" fill="rgba(5,150,105,0.10)" />
        <rect x="205" y="310" width="150" height="14" rx="7" fill="rgba(5,150,105,0.10)" />
        <rect x="205" y="335" width="120" height="14" rx="7" fill="rgba(5,150,105,0.10)" />
        <!-- wrench+leaf icon -->
        <path d="M540 360c22-18 35-42 35-70 0-52-44-94-98-94s-98 42-98 94c0 50 38 90 88 94"
          fill="rgba(16,185,129,0.16)"
        />
        <path d="M470 360l120-120" stroke="rgb(5 150 105)" stroke-width="12" stroke-linecap="round"/>
        <path d="M585 240c22-6 40 8 40 28 0 24-22 38-44 30" fill="rgba(16,185,129,0.55)"/>
        <!-- text bars -->
        <rect x="470" y="235" width="320" height="18" rx="9" fill="rgba(5,150,105,0.18)" />
        <rect x="470" y="265" width="270" height="14" rx="7" fill="rgba(5,150,105,0.12)" />
        <rect x="470" y="290" width="295" height="14" rx="7" fill="rgba(5,150,105,0.12)" />
        <rect x="470" y="315" width="210" height="14" rx="7" fill="rgba(5,150,105,0.12)" />
      </g>
    )}

    {variant === "donate" && (
      <g>
        <!-- heart -->
        <path
          d="M270 392c-70-46-118-96-118-148 0-36 28-64 64-64 24 0 44 12 54 30 10-18 30-30 54-30 36 0 64 28 64 64 0 52-48 102-118 148Z"
          fill="rgba(16,185,129,0.22)"
          stroke="rgba(5,150,105,0.30)"
          stroke-width="8"
        />
        <!-- coin -->
        <circle cx="330" cy="255" r="44" fill="white" stroke="rgba(5,150,105,0.35)" stroke-width="8"/>
        <path d="M330 235v40" stroke="rgb(5 150 105)" stroke-width="8" stroke-linecap="round"/>
        <path d="M318 245c6-8 18-12 30-8 12 4 14 16-2 20-22 6-26 14-18 24 8 10 26 10 36 0"
          fill="none"
          stroke="rgb(5 150 105)"
          stroke-width="6"
          stroke-linecap="round"
        />
        <!-- text bars -->
        <rect x="470" y="225" width="320" height="18" rx="9" fill="rgba(5,150,105,0.18)" />
        <rect x="470" y="255" width="300" height="14" rx="7" fill="rgba(5,150,105,0.12)" />
        <rect x="470" y="280" width="280" height="14" rx="7" fill="rgba(5,150,105,0.12)" />
        <rect x="470" y="305" width="250" height="14" rx="7" fill="rgba(5,150,105,0.12)" />
        <rect x="470" y="330" width="220" height="14" rx="7" fill="rgba(5,150,105,0.12)" />
      </g>
    )}

    {variant === "harvest" && (
      <g>
        <!-- basket -->
        <path d="M170 340c10-56 48-88 100-88h110c52 0 90 32 100 88l14 72H156l14-72Z"
          fill="rgba(16,185,129,0.18)"
          stroke="rgba(5,150,105,0.30)"
          stroke-width="8"
          stroke-linejoin="round"
        />
        <path d="M240 250c20-44 60-74 105-74s85 30 105 74"
          fill="none"
          stroke="rgba(5,150,105,0.35)"
          stroke-width="10"
          stroke-linecap="round"
        />
        <!-- produce circles -->
        <circle cx="290" cy="320" r="22" fill="rgba(16,185,129,0.55)" />
        <circle cx="340" cy="335" r="18" fill="rgba(16,185,129,0.42)" />
        <circle cx="400" cy="315" r="20" fill="rgba(16,185,129,0.50)" />
        <circle cx="455" cy="335" r="18" fill="rgba(16,185,129,0.40)" />
        <!-- text bars -->
        <rect x="520" y="235" width="270" height="18" rx="9" fill="rgba(5,150,105,0.18)" />
        <rect x="520" y="265" width="250" height="14" rx="7" fill="rgba(5,150,105,0.12)" />
        <rect x="520" y="290" width="230" height="14" rx="7" fill="rgba(5,150,105,0.12)" />
        <rect x="520" y="315" width="210" height="14" rx="7" fill="rgba(5,150,105,0.12)" />
      </g>
    )}

    <!-- Corner mark -->
    <g opacity="0.25">
      <circle cx="800" cy="150" r="10" fill="rgb(16 185 129)" />
      <circle cx="830" cy="150" r="10" fill="rgb(16 185 129)" />
      <circle cx="860" cy="150" r="10" fill="rgb(16 185 129)" />
    </g>
  </svg>
)}
